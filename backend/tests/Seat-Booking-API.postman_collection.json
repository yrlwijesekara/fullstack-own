{
  "info": {
    "name": "Seat Booking API Tests",
    "description": "Complete test suite for seat booking system with WebSocket support",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Initialize Seats (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"showId\": \"{{SHOW_ID}}\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/seats/initialize",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "seats", "initialize"]
        },
        "description": "Initialize seats for a showtime based on hall layout. Must be admin."
      },
      "response": []
    },
    {
      "name": "2. Get Seat Map (Public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/api/seats/{{SHOW_ID}}",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "seats", "{{SHOW_ID}}"]
        },
        "description": "Get all seats for a show with their current status (AVAILABLE/LOCKED/BOOKED)"
      },
      "response": []
    },
    {
      "name": "3. Lock Seat A1 (User)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"showId\": \"{{SHOW_ID}}\",\n  \"seatLabel\": \"A1\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/seats/lock",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "seats", "lock"]
        },
        "description": "Lock a seat when user clicks it. Requires authentication."
      },
      "response": []
    },
    {
      "name": "4. Lock Seat A2 (User)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"showId\": \"{{SHOW_ID}}\",\n  \"seatLabel\": \"A2\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/seats/lock",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "seats", "lock"]
        },
        "description": "Lock another seat for testing"
      },
      "response": []
    },
    {
      "name": "5. Try Lock A1 Again (Should Fail)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"showId\": \"{{SHOW_ID}}\",\n  \"seatLabel\": \"A1\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/seats/lock",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "seats", "lock"]
        },
        "description": "Should return 409 error - seat already locked"
      },
      "response": []
    },
    {
      "name": "6. Confirm Booking A1",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"showId\": \"{{SHOW_ID}}\",\n  \"seatLabel\": \"A1\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/seats/confirm",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "seats", "confirm"]
        },
        "description": "Confirm booking after payment. Changes LOCKED -> BOOKED"
      },
      "response": []
    },
    {
      "name": "7. Unlock Seat A2 (Cancel)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"showId\": \"{{SHOW_ID}}\",\n  \"seatLabel\": \"A2\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/seats/unlock",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "seats", "unlock"]
        },
        "description": "User cancels their selection. Changes LOCKED -> AVAILABLE"
      },
      "response": []
    },
    {
      "name": "8. Clear Expired Locks",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": ""
        },
        "url": {
          "raw": "{{BASE_URL}}/api/seats/clear-expired",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "seats", "clear-expired"]
        },
        "description": "Clear seats locked for more than 10 minutes. Can be called by cron job."
      },
      "response": []
    },
    {
      "name": "9. Sync Seats from Hall (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"showId\": \"{{SHOW_ID}}\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/seats/sync",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "seats", "sync"]
        },
        "description": "Resync seats from hall layout. Preserves booked/locked seats."
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:5008",
      "type": "string"
    },
    {
      "key": "SHOW_ID",
      "value": "REPLACE_WITH_YOUR_SHOW_ID",
      "type": "string"
    }
  ]
}
